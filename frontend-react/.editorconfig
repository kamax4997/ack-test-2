# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{node_modules,vendor}/**]
indent_style = ignore
indent_size = ignore
tab_width = ignore
end_of_line = ignore
charset = ignore
trim_trailing_whitespace = ignore
insert_final_newline = ignore

[{Vagrantfile,*.yaml,*.yml,default.pp,package.json,*.js,*.scss}]
indent_style = space
indent_size = 2

[phpcs.xml]
indent_style = space
indent_size = 1
